<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="style/airport.css" />
  <title>Document</title>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
    integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
    crossorigin="" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet" />
  <script defer src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
    integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
    crossorigin=""></script>
  <script defer src="js/airport.js"></script>
</head>

<body>
  <nav>
    <div class="navItem active">Overview</div>
    <div class="navItem">FBOs</div>
    <div class="navItem">Runways</div>
    <div class="navItem">Operations</div>
  </nav>
  <% if (data) { %>

    <section class="overview container">
      <h1>
        <%= "(" + data.icaoId +") " +  data.name %></h1>

      <div class=" basic-info">
          <div class="address">
            <p>
              <%= `${data.stateProvince}, ${data.city} ${data.mainPhone}` %>
            </p>
            <a href="
          <%= 'http://'+data.website %>">
              <%= data.website %>
            </a>
          </div>
          <div class="rating">
            No Rating Yet
          </div>
          </div>

          <h2>Overview</h2>
          <div class="overview-info">
            <table style="width: 100%">
              <tr>
                <th style="width:30%">
                  </tdh>
                <th></th>
              </tr>
              <tr>
                <td>Attendance:</td>
                <td>
                  <%= data.attended ? "Attended" : "No" %>
                </td>
              </tr>
              <tr>
                <td>Runways:</td>
                <td>
                  <ul>
                    <% data.landingSurfaces.forEach(function(item) { %>
                      <li><%= item.name+" Length "+ item.length %></li>
                    <% }); %>
        </ul>
        </td>
          </tr>
          <tr>
            <td>Elevation:</td>
            <td><%= data.elev %> ft (Surveyed)</td>
          </tr>
          <tr>
            <td>Tower:</td>
            <td><%= data.towerPresent  %></td>
          </tr>
          <tr>
            <td>Airspace:</td>
            <td><%= data.airspace.airspace  %></td>
          </tr>
          <tr>
            <td>Fees:</td>
            <td>Hangar, Overnight, Other <br>

              Click FBO link(s) below for details: <br>
              FBO Fee Details:
              County of Anderson</td>
          </tr>
          <tr>
            <td>Timezone:</td>
            <td><%= data.timeZone  %><td>
          </tr>
          
        </table>
        <div class=" blueprint">
          <img src="<%= data.thumbNail %>" alt="">
          </div>
          </div>
    </section>

    <section id="map" class="container location">
      <div class="location-data" data-long="<%= data.location.longitude %>" 
        data-lat="<%= data.location.latitude %>"
        ></div>
    </section>
        
    <% } %>
      <footer>

        <p>@2022 Designed & Developed By <a href="http://www.womenrockwings.com">Women Rock Wings</a></p>
      </footer>

</body>

</html>